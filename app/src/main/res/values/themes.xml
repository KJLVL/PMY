<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyAquarium" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CalenderViewCustom" parent="android:Widget.CalendarView">
        <item name="colorAccent">@color/reg</item>
    </style>
    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="background">@drawable/calc_item</item>
        <item name="windowMinWidthMajor">93%</item>
        <item name="windowMinWidthMinor">93%</item>
        <item name="android:colorAccent">@color/ripple</item>
        <item name="android:windowBackground">@color/ripple</item>
        <item name="textFillColor">@color/black</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="spinnerTheme" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Toolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="titleTextColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="BrandedSwitch.control" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/bthAll</item>
        <item name="colorSwitchThumbNormal">@color/gray</item>
    </style>

    <style name="BottomNavigationView"
        parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="suggestionRowLayout">@color/white</item>
    </style>

    <style name="MainNavigationView"
        parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Theme.MyAquarium.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyAquarium.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyAquarium.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>